<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="379dp"
        android:layout_height="85dp"
        android:layout_marginTop="56dp"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="461dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="461dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/siete"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:onClick="siete"
                android:text="7"
                android:textSize="45sp" />

            <Button
                android:id="@+id/cuatro"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="cuatro"
                android:text="4"
                android:textSize="45sp" />

            <Button
                android:id="@+id/uno"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="uno"
                android:text="1"
                android:textSize="45sp" />

            <Button
                android:id="@+id/punto"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="punto"
                android:text="."
                android:textSize="45sp" />

            <Button
                android:id="@+id/limpiar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="clear"
                android:text="@string/limpiar"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="461dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/ocho"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:onClick="ocho"
                android:text="8"
                android:textSize="45sp" />

            <Button
                android:id="@+id/cinco"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="cinco"
                android:text="5"
                android:textSize="45sp" />

            <Button
                android:id="@+id/dos"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="dos"
                android:text="2"
                android:textSize="45sp" />

            <Button
                android:id="@+id/cero"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="ceroo"
                android:text="0"
                android:textSize="45sp" />

            <Button
                android:id="@+id/eliminar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="del"
                android:text="@string/eliminar"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="461dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/nueve"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:onClick="nueve"
                android:text="9"
                android:textSize="45sp" />

            <Button
                android:id="@+id/seis"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="seis"
                android:text="6"
                android:textSize="45sp" />

            <Button
                android:id="@+id/tres"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="tres"
                android:text="3"
                android:textSize="45sp" />

            <Button
                android:id="@+id/igual"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="="
                android:textSize="45sp" />

            <Button
                android:id="@+id/otro"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="salir"
                android:text="@string/otro"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="461dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/sumar"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:onClick="sumar"
                android:text="+"
                android:textSize="45sp" />

            <Button
                android:id="@+id/restar"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="restar"
                android:text="-"
                android:textSize="45sp" />

            <Button
                android:id="@+id/multiplicar"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:onClick="multiplicar"
                android:text="*"
                android:textSize="45sp" />

            <Button
                android:id="@+id/dividir"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="dividir"
                android:text="/"
                android:textSize="45sp" />

            <Button
                android:id="@+id/acerca"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:onClick="acercaDe"
                android:text="@string/acercade" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>